{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": ["src", "drizzle.config.ts"]
}
